<!DOCTYPE html>
<html>
  <head>
    <title>AuthifyWeb</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  </head>

  <body>
    <nav class="navbar navbar-fixed-top navbar-toggleable-sm navbar-inverse bg-purple mb-3">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#collapsing-navbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <%= link_to 'Authify', root_path, class: 'navbar-brand pb-2', data: { no_turbolink: true, turbolinks: false } %>
      <div class="navbar-collapse collapse" id="collapsing-navbar">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <%= link_to me_path, class: 'nav-link', data: { no_turbolink: true, turbolinks: false } do %>
              <%= icon 'user' %> Profile
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to logout_path, method: :delete, class: 'nav-link' do %>
              <%= icon 'sign-out' %> Logoff
            <% end %>
          </li>
        </ul>
      </div>
    </nav>
    <div class="container-fluid" id="main">
      <div class="row row-offcanvas row-offcanvas-left">
        <div class="col-md-3 col-lg-2 sidebar-offcanvas" id="sidebar" role="navigation">
          <ul class="nav flex-column">
            <li class="nav-item"><a class="nav-link" href="#"><%= icon 'tachometer' %> Overview</a></li>
            <li class="nav-item"><a class="nav-link" href="#"><%= icon 'line-chart' %> Reports</a></li>
            <li class="nav-item"><%= link_to users_path, class: 'nav-link' do %><%= icon :users %> Users<% end %></li>
            <li class="nav-item"><%= link_to organizations_path, class: 'nav-link' do %><%= icon 'sitemap' %> Organizations<% end %></li>
            <li class="nav-item"><a class="nav-link" href=""><%= icon 'plug' %> Integrations</a></li>
            <li class="nav-item"><a class="nav-link" href="" data-target="#about" data-toggle="modal"><%= icon 'question-circle' %> About</a></li>
          </ul>
        </div>
        <!--/col-->
        <div class="col-md-9 col-lg-10 main">
          <% if flash[:success] %>
            <div class="alert alert-success fade collapse show">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">×</span>
                  <span class="sr-only">Close</span>
              </button>
              <%= flash[:success] %>
            </div>
          <% end %>
          <% if flash[:notice] %>
            <div class="alert alert-info fade collapse show">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">×</span>
                  <span class="sr-only">Close</span>
              </button>
              <%= flash[:notice] %>
            </div>
          <% end %>
          <% if flash[:alert] %>
            <div class="alert alert-warning fade collapse show">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">×</span>
                  <span class="sr-only">Close</span>
              </button>
              <%= flash[:alert] %>
            </div>
          <% end %>
          <% if flash[:danger] %>
            <div class="alert alert-danger fade collapse show">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">×</span>
                  <span class="sr-only">Close</span>
              </button>
              <%= flash[:danger] %>
            </div>
          <% end %>
          <!--toggle sidebar button-->
          <p class="hidden-md-up">
              <button type="button" class="btn btn-primary-outline btn-sm" data-toggle="offcanvas"><i class="fa fa-chevron-left"></i> Menu</button>
          </p>
          <h1 class="display-1 hidden-xs-down"><%= content_for :subject %></h1>
          <hr>
          <%= yield %>
        </div>
      </div>
    </div>
    <!--/.container-->
    <footer class="container-fluid">
        <p class="text-right small">©2017 KnuEdge</p>
    </footer>
  </body>
  <!-- About Modal -->
  <div class="modal fade" id="about" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
            <span class="sr-only">Close</span>
          </button>
          <h4 class="modal-title" id="myModalLabel">Modal</h4>
        </div>
        <div class="modal-body">
          Authify Web Service
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary-outline" data-dismiss="modal">OK</button>
        </div>
      </div>
    </div>
  </div>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</html>
