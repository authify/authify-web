<div class="form-header">
  <%= image_tag "logo.png" %>
</div>
<%= form_for(:session, url: login_path, html: { class: 'form-signin' }) do |f| %>
  <h2 class="form-signin-heading">Authify Service</h2>
  <%= f.label :email, class: 'sr-only' %>
  <%= f.email_field :email, class: 'form-control', required: true, autofocus: true, placeholder: 'email' %>
  <%= f.label :password, class: 'sr-only' %>
  <%= f.password_field :password, class: 'form-control', required: true, placeholder: 'password' %>

  <%= f.hidden_field :callback, value: @callback_url %>
  <%= f.submit "Log in", class: "btn btn-lg btn-signin btn-block" %>
<% end %>
