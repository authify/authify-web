<% content_for :subject do %>
  Your Info
<% end %>

<div class="row placeholders mb-3">
  <div class="col-lg-3 col-sm-12 placeholder text-center">
    <%= gravatar_tag @user.email, size: 120, html: { class: "center-block img-fluid rounded-circle" } %>
    <h4><%= @user.full_name %></h4>
    <small class="text-muted"><%= @user.email %></small>
  </div>
</div>
<div class="row mb-3">
  <div class="col-lg-6 col-xsm-12">
    <div class="card">
      <div class="card-header">
        Related Identities
      </div>
      <div class="card-block">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead class="thead-inverse">
              <tr>
                <th>Identity Provider</th>
                <th>UID</th>
                <th>&nbsp;</th>
              </tr>
            </thead>
            <tbody>
            <%= render 'identities' %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-6 col-xsm-12">
    <div class="card">
      <div class="card-header">
        API Keys
      </div>
      <div class="card-block">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead class="thead-inverse">
              <tr>
                <th>Access Key</th>
                <th>&nbsp;</th>
              </tr>
            </thead>
            <tbody>
            <%= render 'api_keys' %>
            </tbody>
          </table>
        </div>
        <br>
        <p class="card-text">
          <%= link_to add_api_key_path, remote: true, method: :post, class: 'btn bg-orange', data: { no_turbolink: true, turbolinks: false } do %>
            <%= icon('plus') %> Add
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>
<div id="apikey-modal" class="modal fade"></div>
